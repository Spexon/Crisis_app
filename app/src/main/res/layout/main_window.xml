    <View
        android:id="@+id/myRectangleView"
        android:layout_width="375dp"
        android:layout_height="600dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/tips_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/tipsScrollView"
        android:layout_width="374dp"
        android:layout_height="549dp"
        android:layout_marginEnd="392dp"
        android:layout_marginRight="392dp"
        android:layout_marginBottom="665dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button25"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button27"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

            <Button
                android:id="@+id/button28"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="15dp"
                android:text="Button" />

        </LinearLayout>
    </ScrollView>

   <!-- <LinearLayout
        android:id="@+id/alertView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> !-->

    <androidx.appcompat.widget.Toolbar
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/tab_pane"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.tabs.TabLayout

        android:layout_width="370dp"
        android:layout_height="47dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/tips_symbol" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/alert_symbol" />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/quiz_symbol" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/profile_symbol" />


    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>